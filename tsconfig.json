{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "src",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react"
	},
	"include": ["src/**/*", "types"]
}
